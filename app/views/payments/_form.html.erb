<%# TODO: refactor DRY %>
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= link_to "< Voltar", payments_path, class: 'btn btn-secondary btn-sm' %>

<div class="row mt-4">
  <div class="col-6">
    <%= form_with(model: payment) do |form| %>
      <% if payment.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

          <ul>
            <% payment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :person_id, 'Associado', class: 'form-label' %>
        <div data-controller="autocomplete" data-autocomplete-url-value="<%= search_people_path %>" role="combobox">
          <%= form.hidden_field :person_id, data: { autocomplete_target: 'hidden' } %>
          <%= form.search_field :q, autofocus: true, data: { autocomplete_target: 'input' }, value: payment.person&.name, class: 'form-control' %>
          <ul class="list-group" data-autocomplete-target="results"></ul>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :amount, 'Valor', class: 'form-label' %>
        <%= form.number_field :amount, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :paid_at, 'Pagom em', class: 'form-label' %>
        <%= form.date_field :paid_at %>
      </div>

      <div class="mb-3">
        <%= form.submit 'Salvar', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
